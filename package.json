{
  "name": "@robennals/wtm",
  "version": "1.0.0",
  "description": "A CLI tool for managing git worktrees with ease",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "wtm": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "prepublishOnly": "pnpm run build",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "git",
    "worktree",
    "cli",
    "workflow",
    "branch",
    "development"
  ],
  "author": "Rob Ennals <rob.ennals@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robennals/worktree-manager.git"
  },
  "homepage": "https://github.com/robennals/worktree-manager",
  "bugs": {
    "url": "https://github.com/robennals/worktree-manager/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.24.0",
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2"
  },
  "devDependencies": {
    "@types/node": "^25.0.6",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^8.57.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
